# These are lightweight trailers which could be built only after 1873 or so
# following the introduction of steel, as opposed to rubber springs:
# see Gladwin, "A History of the Britsh Steam Tram", vol. 3 p. 170. 
obj=vehicle
name=Small-2-Deck-Trailer
speed=16
copyright=James
intro_year=1874
intro_month=3
retire_year=1895
retire_month=12
waytype=tram_track
freight=Passagiere
payload=36
overcrowded_capacity=3
length=4
weight=1.9
axles=2
cost=175000
runningcost=8
sound=-1

can_lead_from_rear=0
bidirectional=0
way_constraint_prohibitive[0]=0
comfort=33
min_loading_time=10
max_loading_time=55

Constraint[Prev][0]=Steam-Tram
Constraint[Prev][1]=Tram-Horses
Constraint[Prev][2]=small-2-deck-trailer

Constraint[Next][0]=none

